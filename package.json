{
  "name": "vtu-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --setupFiles ./jest.setup.ts",
    "test:watch": "jest --watch --setupFiles ./jest.setup.ts",
    "test:coverage": "jest --coverage --setupFiles ./jest.setup.ts",
    "migrate": "drizzle-kit push:pg",
    "generate": "drizzle-kit generate:pg",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs": "swagger-cli bundle src/docs/swagger.yaml --outfile dist/swagger.yaml --type yaml"
  },
  "dependencies": {
    "@types/node": "^20.8.2",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "postgres": "^3.4.5",
    "swagger-cli": "^4.0.4",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/supertest": "^2.0.14",
    "@types/swagger-ui-express": "^4.1.4",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
